{
  "name": "@doros39/json-table-viewer",
  "version": "0.1.2",
  "description": "A Web Component that renders interactive HTML tables from JSON data.",
  "type": "module",
  "main": "dist/json-table-viewer.js",
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Doros39/json-table-viewer.git"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --env=jsdom",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --reporters=default --reporters=jest-junit --env=jsdom",
    "build": "rollup -c",
    "start": "npx serve ."
  },
  "keywords": [
    "web-component",
    "custom-element",
    "table",
    "json"
  ],
  "author": "Doros39",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "esbuild": "^0.19.0",
    "jest": "^29.6.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-junit": "^16.0.0",
    "jsdom": "^22.1.0",
    "rollup": "^3.29.5"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {},
    "clearMocks": true,
    "verbose": true
  },
  "jest-junit": {
    "outputDirectory": "./",
    "outputName": "test-results.xml"
  }
}
